
# while y el for
# un bucle while repite su bucle de codigo mientras 
# para detener el bucle creamos una variable antes de crear el bucle



control = True
while control == True:
    print("hola mundo")

    control = False

    print("se mostro una vez")


# para controlar las veces que se repite un bucle while comenzamos con una variable estableciada en un numero. llamamos a esta variable : contador.




contador = 1
while contador < 10 :
    print(contador)
    contador += 1



# calculo de interes compuesto


cuenta = 100
interes = 0.04
annos = 3
print("Monto inicial: " , cuenta)
contador = 1

while contador <= annos:
    interes_compuesto = cuenta * interes
    cuenta += interes_compuesto
    cuenta += 100   #100 dolar que le hecho por mes
    print("año: ",contador,": ",cuenta)
    contador += 1



# 1 Hacer un programa que calcule la suma, resta, multiplicación y división de dos números ingresados por el usuario.


n1 = float(input("Introduce tu primer número: ") )
n2 = float(input("Introduce tu segundo número: ") )

opcion = 0
while True:
    print("""
    Dime, ¿qué quieres hacer?
    
    1) Sumar los dos números
    2) Restar los dos números
    3) Multiplicar los dos números
    4) Cambiar los números elegidos
    5) Apagar calculadora
    6) Dividir los dos numeros""" )
    opcion = int(input("Elige una opción: ") )     

    if opcion == 1:
        print(" ")
        print("RESULTADO: La suma de",n1,"+",n2,"es igual a",n1+n2)
    elif opcion == 2:
        print(" ")
        print("RESULTADO: La resta de",n1,"-",n2,"es igual a",n1-n2)
    elif opcion == 3:
        print(" ")
        print("RESULTADO: El producto de",n1,"*",n2,"es igual a",n1*n2)
    elif opcion == 4:
        n1 = float(input("Introduce tu primer número: ") )
        n2 = float(input("Introduce tu segundo número: ") )
    elif opcion == 5:
        break
    elif opcion == 6:
        print(" ")
        print("RESULTADO: La divicion de",n1,"/",n2,"es igual a",n1/n2) 
    else:
        print("Opción incorrecta")




# 2  Hacer un programa que calcule el área y la circunferencia de un círculo.


radio = float(input("introduce medida del radio: ") )


area = radio * radio * 3.1416

print("el area es:  ",area)

circunf = radio + radio * 3.14
print("la circunferencia es:   " ,circunf)






# 3  Hacer un programa que calcule el promedio de una lista de números ingresados por el usuario.

print("calculemos el promedio de una lista de numeros")


n1 = float(input("Introduce tu primer número: ") )
n2 = float(input("Introduce tu segundo número: ") )
n3 = float(input("Introduce tu primer número: ") )
n4 = float(input("Introduce tu segundo número: ") )



suma =  n1 + n2 + n3 + n4

suma / 4
print("el promedio es: " ,suma)










# n = int(input("Ingrese un número: "))
print("averiguemos si es par o impar.   ")

num = int(input("Ingrese un número: "))

if num % 2 == 0:  # el % se utiliza como operador mod que nos da el sobrante de una divicion 
    print(num, "es par.")
else:
    print(num, "es impar.")




#4   Hacer un programa que calcule la tabla de multiplicar de un número ingresado por el usuario.

for f in range(1,11):
	multiplicacion = 7 * f #hacemos la multiplicación
	print(f'7 x {f} = {multiplicacion}') #mostramos el resultado




